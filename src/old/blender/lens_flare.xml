<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE openshot-effect>
<effect>
	<title translatable="True">Lens Flare</title>
	<description translatable="True">Lens Flare</description>
	<icon>lens_flare.png</icon>
	<category>Video</category>
	<service>lens_flare.blend</service>
	
	<param name="file_name" type="text" title="File Name" description="">
		<default>TitleFileName</default>
	</param>
	
	<param name="start_x" type="spinner" title="Start: X" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>3.8</default>
	</param>
	
	<param name="start_y" type="spinner" title="Start: Y" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>4.13</default>
	</param>
	
	<param name="start_z" type="spinner" title="Start: Z" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>2.65</default>
	</param>
	
	<param name="end_x" type="spinner" title="End: X" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>-4.6</default>
	</param>
	
	<param name="end_y" type="spinner" title="End: Y" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>4.13</default>
	</param>
	
	<param name="end_z" type="spinner" title="End: Z" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>3.21</default>
	</param>

	<param name="diffuse_color" type="color" title="Diffuse Color" description="">
		<default>#ffffff</default>
	</param>
	
	<param name="specular_color" type="color" title="Specular Color" description="">
		<default>#ffffff</default>
	</param>
	
	<param name="mirror_color" type="color" title="Mirror Color" description="">
		<default>#ffffff</default>
	</param>

	
	<param name="alpha" type="spinner" title="Alpha" description="">
		<min>0.0</min>
		<max>1.0</max>
		<default>1.0</default>
	</param>

	<param name="sun_glare_type" type="dropdown" title="Sun: Type of Glare" description="">
		<values>
			<value name="Streaks" num="STREAKS"/>
			<value name="Simple Star" num="SIMPLE_STAR"/>
			<value name="Fog Glow" num="FOG_GLOW"/>
		</values>
		<default>STREAKS</default>
	</param>
	<param name="sun_streaks" type="spinner" title="Sun: Number of Streaks" description="">
		<min>2</min>
		<max>16</max>
		<default>4</default>
	</param>
	<param name="sun_glare_color" type="spinner" title="Sun: Color Threshold" description="">
		<min>0.0</min>
		<max>1.0</max>
		<default>0.250</default>
	</param>
	<param name="sun_angle_offset" type="spinner" title="Sun: Angle Offset" description="">
		<min>0.0</min>
		<max>180.0</max>
		<default>0.0</default>
	</param>
	<param name="spots_glare_color" type="spinner" title="Spots: Color Threshold" description="">
		<min>0.0</min>
		<max>1.0</max>
		<default>0.250</default>
	</param>
	
	<param name="start_halo_size" type="spinner" title="Halo: Starting Size" description="">
		<min>0.0</min>
		<max>100.0</max>
		<default>0.3</default>
	</param>
	
	<param name="end_halo_size" type="spinner" title="Halo: Ending Size" description="">
		<min>0.0</min>
		<max>100.0</max>
		<default>0.3</default>
	</param>
	
	<param name="halo_hardness" type="spinner" title="Halo: Hardness" description="">
		<min>0.0</min>
		<max>100.0</max>
		<default>79.0</default>
	</param>
	
	<param name="halo_use_lines" type="dropdown" title="Halo: Use Lines" description="">
		<values>
			<value name="Yes" num="Yes"/>
			<value name="No" num="No"/>
		</values>
		<default>No</default>
	</param>
	<param name="halo_line_count" type="spinner" title="Halo: Line Count" description="">
		<min>0.0</min>
		<max>100.0</max>
		<default>12.0</default>
	</param>
	
	<param name="halo_use_ring" type="dropdown" title="Halo: Use Rings" description="">
		<values>
			<value name="Yes" num="Yes"/>
			<value name="No" num="No"/>
		</values>
		<default>No</default>
	</param>
	<param name="halo_ring_count" type="spinner" title="Halo: Ring Count" description="">
		<min>0.0</min>
		<max>100.0</max>
		<default>4.0</default>
	</param>
	
	<param name="halo_use_star" type="dropdown" title="Halo: Use Stars" description="">
		<values>
			<value name="Yes" num="Yes"/>
			<value name="No" num="No"/>
		</values>
		<default>No</default>
	</param>
	<param name="halo_star_tip_count" type="spinner" title="Halo: Star Count" description="">
		<min>0.0</min>
		<max>100.0</max>
		<default>4.0</default>
	</param>

	<param name="start_frame" type="spinner" title="Start Frame" description="">
		<min>1</min>
		<max>1</max>
		<default>1</default>
	</param>
	
	<param name="end_frame" type="spinner" title="End Frame" description="">
		<min>250</min>
		<max>250</max>
		<default>250</default>
	</param>

	<!-- SPEED -->
	<param name="animation_speed" type="dropdown" title="Animation Length" description="">
		<values>
			<value name="Default" num="1"/>
			<value name="2X" num="2"/>
			<value name="3X" num="3"/>
			<value name="4X" num="4"/>
			<value name="5X" num="5"/>
		</values>
		<default>1</default>
	</param>
</effect>
