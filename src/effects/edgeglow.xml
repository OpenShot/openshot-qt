<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE openshot-effect>
<effect>
	<title translatable="True">Edgeglow</title>
	<description translatable="True">Find and glow the edges of objects</description>
	<icon>edgeglow.png</icon>
	<category>Video</category>
	<service>frei0r.edgeglow</service>
	
	<param name="lthresh" type="spinner" title="Threshold" description="">
		<min>0.0</min>
		<max>1.0</max>
		<step>0.01</step>
		<default>0.5</default>
	</param>

	<param name="lupscale" type="spinner" title="Up Scale" description="">
		<min>0.0</min>
		<max>1.0</max>
		<step>0.01</step>
		<default>0.0</default>
	</param>

	<param name="lredscale" type="spinner" title="Red Scale" description="">
		<min>0.0</min>
		<max>1.0</max>
		<step>0.01</step>
		<default>0.0</default>
	</param>

</effect>

