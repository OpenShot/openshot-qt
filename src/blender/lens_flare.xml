<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE openshot-effect>
<effect>
	<title translatable="True">Lens Flare</title>
	<description translatable="True">Lens Flare</description>
	<icon>lens_flare.png</icon>
	<category>Video</category>
	<service>lens_flare.blend</service>
	
	<param name="file_name" type="text" title="File Name" description="">
		<default>TitleFileName</default>
	</param>
	
	<param name="start_x" type="spinner" title="Start: X" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>3.8</default>
	</param>
	
	<param name="start_y" type="spinner" title="Start: Y" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>4.13</default>
	</param>
	
	<param name="start_z" type="spinner" title="Start: Z" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>2.65</default>
	</param>
	
	<param name="end_x" type="spinner" title="End: X" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>-4.6</default>
	</param>
	
	<param name="end_y" type="spinner" title="End: Y" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>4.13</default>
	</param>
	
	<param name="end_z" type="spinner" title="End: Z" description="">
		<min>-10.0</min>
		<max>10.0</max>
		<default>3.21</default>
	</param>

	<param name="diffuse_color" type="color" title="Diffuse Color" description="">
		<default>#ffffff</default>
	</param>
	
	<param name="alpha" type="spinner" title="Alpha" description="">
		<min>0.0</min>
		<max>50.0</max>
		<default>10.0</default>
	</param>

	<param name="glare1_type" type="dropdown" title="Glare 1: Type of Glare" description="">
		<values>
            <value name="Ghosts" num="GHOSTS"/>
			<value name="Streaks" num="STREAKS"/>
			<value name="Simple Star" num="SIMPLE_STAR"/>
			<value name="Fog Glow" num="FOG_GLOW"/>
		</values>
		<default>GHOSTS</default>
	</param>
	<param name="glare1_streaks" type="spinner" title="Glare 1: Number of Streaks" description="">
		<min>2</min>
		<max>16</max>
		<default>4</default>
	</param>
	<param name="glare1_color" type="spinner" title="Glare 1: Color Threshold" description="">
		<min>0.0</min>
		<max>1.0</max>
		<default>0.250</default>
	</param>
	<param name="glare1_angle" type="spinner" title="Glare 1: Angle Offset" description="">
		<min>0.0</min>
		<max>180.0</max>
		<default>0.0</default>
	</param>

	<param name="glare2_type" type="dropdown" title="Glare 2: Type of Glare" description="">
		<values>
            <value name="Ghosts" num="GHOSTS"/>
			<value name="Streaks" num="STREAKS"/>
			<value name="Simple Star" num="SIMPLE_STAR"/>
			<value name="Fog Glow" num="FOG_GLOW"/>
		</values>
		<default>STREAKS</default>
	</param>
	<param name="glare2_streaks" type="spinner" title="Glare 2: Number of Streaks" description="">
		<min>2</min>
		<max>16</max>
		<default>4</default>
	</param>
	<param name="glare2_color" type="spinner" title="Glare 2: Color Threshold" description="">
		<min>0.0</min>
		<max>1.0</max>
		<default>0.250</default>
	</param>
	<param name="glare2_angle" type="spinner" title="Glare 2: Angle Offset" description="">
		<min>0.0</min>
		<max>180.0</max>
		<default>0.0</default>
	</param>

	<param name="start_frame" type="spinner" title="Start Frame" description="">
		<min>1</min>
		<max>1</max>
		<default>1</default>
	</param>
	
	<param name="end_frame" type="spinner" title="End Frame" description="">
		<min>250</min>
		<max>250</max>
		<default>250</default>
	</param>

	<!-- SPEED -->
	<param name="length_multiplier" type="dropdown" title="Animation Length" description="">
		<values>
			<value name="Default" num="1"/>
			<value name="2X" num="2"/>
			<value name="3X" num="3"/>
			<value name="4X" num="4"/>
			<value name="5X" num="5"/>
		</values>
		<default>1</default>
	</param>
</effect>
